@model MvcTest.Models.IntegerSpiralViewModel

@{
    ViewBag.Title = "Generate";
}

<h2>Integer spiral size @Model.Width</h2>

<table class="spiral-table">
    @for (int i = 0; i < Model.Width; i++)
    {
        <tr>
            @for (int j = 0; j < Model.Width; j++)
            {
                <td style="background-color:@Model.GetCell(i, j).CellBackgroundColor">@Model.GetCell(i, j).DisplayValue</td>
            }
        </tr>
    }

</table>
